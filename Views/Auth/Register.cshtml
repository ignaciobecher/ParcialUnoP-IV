@model ParcialUnoP_IV.Models.RegisterViewModel

<h2>Crear nuevo usuario</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Username">Usuario:</label>
        <input asp-for="Username" placeholder="Ingrese usuario..." class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Contraseña:</label>
        <input asp-for="Password" placeholder="Ingrese contraseña..." type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirmar contraseña:</label>
        <input asp-for="ConfirmPassword" placeholder="Ingrese su contraseña nuevamente..." type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>

<a asp-action="Login">Volver a inicio de sesión</a>

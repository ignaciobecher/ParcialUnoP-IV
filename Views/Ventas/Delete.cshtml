@model ParcialUnoP_IV.Models.Ventas

@{
    ViewData["Title"] = "Delete";
}


<h3>¿Estas seguro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.total)
        </dd>
        <dt class = "col-sm-2">
           Fecha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a ventas</a>
    </form>
</div>

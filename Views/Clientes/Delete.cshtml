@model ParcialUnoP_IV.Models.Clientes

@{
    ViewData["Title"] = "Delete";
}


<h3>¿Estas seguro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
           Deuda
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.debt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a clientes</a>
    </form>
</div>
